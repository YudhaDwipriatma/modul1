<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtsisi"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Masukan Panjang Sisi" />

    <EditText
        android:id="@+id/editSisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtsisi"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSisi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="134dp"
        android:text="Ok" />

    <TextView
        android:id="@+id/txtLuas"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/btnOk"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="Luas Pesegi" />

    <EditText
        android:id="@+id/editHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLuas"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtKeliling"
        android:layout_width="377dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="195dp"
        android:text="Keliling Persegi" />

    <EditText
        android:id="@+id/editKeliling"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/txtKeliling"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-198dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>